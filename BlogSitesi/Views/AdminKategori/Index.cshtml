@model IEnumerable<BlogSitesi.Models.Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-8">
    <h2 style="color:mediumvioletred;font-weight:bold;padding-top:50px">Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.kategoriAdi)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.kategoriAdi)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.kategoriId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.kategoriId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.kategoriId })
                </td>
            </tr>
        }

    </table>

</div>